<%- include("includes/header") %>

<div class="container mt-3" >
  <% const posts = locals.posts; console.log( posts); %>

    <% posts.forEach(function(post) { %>
        <% console.log(post); %>
    <div class="card mt-4" >
        <div class="row card-body" >
            <div class="col-auto" >
                <h2> <%= post.title %></h2>
            </div>
         
        </div>
        <div class="row mt-0 card-body" >
            <div class="col-auto" >
                <% var date = post.date; 
                var dd = String(date.getDate()).padStart(2, '0');
                var mm = String(date.getMonth() + 1).padStart(2, '0'); //January is 0!
                var yyyy = date.getFullYear();
                date =  mm + '/' + dd + '/' + yyyy;
                 %>
                <p class="text-muted" ><img src='<%= post.user_pic %>?s=40' class="img-fluid" alt="user-pic" /> By 
                
                <span class="author" ><%= post.user %></span> on <%= date %></p>

            </div>
        </div>
        <div class="row card-body" >
            <div class="col-auto" >
                <h3 class="display-6" ><%= post.description %></h3>
            </div>
        </div>
    </div>
    <% });%>
  
       
   
</div>

